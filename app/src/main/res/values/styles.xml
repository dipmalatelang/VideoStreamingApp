<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="android:background">@drawable/background</item>

        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="colorOnSurface">@color/colorPrimary</item>


    </style>

    <style name="AppThemestyle" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">12sp</item>

    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">14sp</item>
    </style>
    <style name="SearchToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        //toolbar back arrow color
        <item name="android:textColorSecondary">@android:color/white</item>
        //toolbar title color
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_text_white</item>
        <item name="android:textColorHint">@color/color_text_grey</item>

        <item name="android:textColor">@color/color_text_white</item>



    </style>



</resources>
